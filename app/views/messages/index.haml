.wrapper

  .notice-of-group-created
    チャットグループが作成されました

  .sidebar
    .header
      %h3 tempo
      .header__icon
        = link_to new_message_path do
          %i.fa.fa-edit
        = link_to new_message_path do
          %i.fa.fa-cog
    = render 'group'

  .groupchat
    .header
      .header__left
        .group_name sample
        .member Member：tempo rary
      = link_to new_message_path do
        .edit_button
          %p Edit
    .messages
      .blank
      = render 'message'
      = render 'message'
      = render 'message'
    .footer
      %form{action: "/", method: "post"}
        %input.message_form{name: "title", placeholder: "type a message"}
        .icon_wrapper
          %label
            %i.fa.fa-image
            %input.hidden{type: "file", name: "datafile", id: "filesend"}
        %input.send_button{type: "submit", value: "Send"}
